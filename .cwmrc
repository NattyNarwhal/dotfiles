# tyler's cwmrc Beta
# Amber (#FFBF00) monochrome theme.
fontname "terminus:pixelsize=14:bold"

# Autogroup widgets
#autogroup 0 XClock
#autogroup 0 conky
ignore conky

# sticky and grouponly == virtual desktops
sticky yes

# just window stuff
borderwidth 2
color activeborder "#FFBF00"
color inactiveborder "#FFBF00"
color selfont "#FFBF00"
color font "#FFBF00"
color menubg "#000000"
color menufg "#FFBF00"
olor urgencyborder "#FFFFFF"
color ungroupborder "#FFFFFF"
gap 0 20 0 0

# Bindings:

bind 4S-r reload
bind 4S-e quit

bind 4-Left moveleft
bind 4-Down movedown
bind 4-Up moveup
bind 4-Right moveright

bind 4S-Left resizeleft
bind 4S-Down resizedown
bind 4S-Up resizeup
bind 4S-Right resizeright

bind 4-d exec
bind 4-Return "urxvt"
bind 4-comma "mixerctl outputs.master=-5"
bind 4-period "mixerctl outputs.master=+5"

bind 4S-q delete
bind 4-f maximize
bind 4-Tab cycle
bind 4-s search
bind 4-l lock

mousebind 4-1 window_move
mousebind 4-2 window_resize

# groups 

bind 4S-1 movetogroup1
bind 4S-2 movetogroup2
bind 4S-3 movetogroup3
bind 4S-4 movetogroup4
bind 4S-5 movetogroup5
bind 4S-6 movetogroup6
bind 4S-7 movetogroup7
bind 4S-8 movetogroup8
bind 4S-9 movetogroup9

bind 4-1 grouponly1
bind 4-2 grouponly2
bind 4-3 grouponly3
bind 4-4 grouponly4
bind 4-5 grouponly5
bind 4-6 grouponly6
bind 4-7 grouponly7
bind 4-8 grouponly8
bind 4-9 grouponly9

# launcher

command term "urxvt"
command surf "/usr/local/bin/tabbed -e /usr/local/bin/surf"
command colour "gcolor2"
